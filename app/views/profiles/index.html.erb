<div class="admin-container">
<div class="page-header"><h1>Profiles</h1></div>

	<table id="table_id">
	  <thead>
		  <tr>
			  <th>ID</th>
		    <th>First Name</th>
		    <th>Last Name</th> 
		    <th>University</th>
		    <th>Graduation Year</th>
		    <th>Company</th>
		    <th>Current Location</th>
		    <th>Gender</th>
		    <th>Start Date with Current Firm</th>
		    <th>Preferred PE Start Date</th>
		    <th>Industry Preference (First)</th>
		    <th>Industry Preference (Second)</th>
		    <th>Industry Preference (Third)</th>
		    <th>Submitted At</th>
		    <th>Resume</th>
		    <th>Delete</th>
		  </tr>
	  </thead>
	  <tbody>
			<%= render @profiles %>
		</tbody>
	</table>
	<div class="download-form">
	<div class="download-form-title">Download All</div>
	<%= form_tag(download_all_path, method: "get") do %>
		<div class="radio-option">
			<%= radio_button_tag(:order, "first_name") %>
			<%= label_tag(:first_name, "First Name") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "last_name") %>
			<%= label_tag(:last_name, "Last Name") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "university") %>
			<%= label_tag(:university, "University") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "graduation_year") %>
			<%= label_tag(:graduation_year, "Graduation Year") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "company") %>
			<%= label_tag(:company, "Company") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "location") %>
			<%= label_tag(:location, "Location") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "gender") %>
			<%= label_tag(:gender, "Gender") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:order, "start_date") %>
			<%= label_tag(:start_date, "Start Date") %>
		</div>
		<%= submit_tag("Download All", class: "download-button") %>
	<% end %>
	</div>
	<div class="download-form">
	<div class="download-form-title">Download Selected</div>
	<%= form_tag(combined_selected_path, method: "get", class: "selected-form") do %>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "first_name") %>
			<%= label_tag(:first_name, "First Name") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "last_name") %>
			<%= label_tag(:last_name, "Last Name") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "university") %>
			<%= label_tag(:university, "University") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "graduation_year") %>
			<%= label_tag(:graduation_year, "Graduation Year") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "company") %>
			<%= label_tag(:company, "Company") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "location") %>
			<%= label_tag(:location, "Location") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "gender") %>
			<%= label_tag(:gender, "Gender") %>
		</div>
		<div class="radio-option">
			<%= radio_button_tag(:selected, "start_date") %>
			<%= label_tag(:start_date, "Start Date") %>
		</div>
		<%= submit_tag("Download Selected", class: "download-button") %>
	<% end %>
	</div>
