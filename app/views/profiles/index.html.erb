<div class="admin-container">
<div class="page-header"><h1>Profiles</h1></div>
<div class="download-form">
	<div class="download-form-title">Download All, Sorted by:</div>
	<%= form_tag(download_all_path, method: "get") do %>
		<select name="order">
		<option value="">Select</option>

		<option value="first_name">First Name</option>
		
		<option value="last_name">Last Name</option>
		
		<option value="university">University</option>
		
		<option value="graduation_year">Graduation Year</option>
		
		<option value="company">Company</option>
		
		<option value="current_location">Location</option>
		
		<option value="gender">Gender</option>
		
		<option value="start_date_pe">Start Date</option>
		</select>
		<%= submit_tag("Download All", class: "download-button") %>
	<% end %>
	</div>
	<div class="download-form">
	<div class="download-form-title">Download Selected, Sorted by:</div>
	<%= form_tag(combined_selected_path, method: "get", class: "selected-form") do %>
			<select name="selected">
		<option value="">Select</option>

		<option value="first_name">First Name</option>
		
		<option value="last_name">Last Name</option>
		
		<option value="university">University</option>
		
		<option value="graduation_year">Graduation Year</option>
		
		<option value="company">Company</option>
		
		<option value="current_location">Location</option>
		
		<option value="gender">Gender</option>
		
		<option value="start_date_pe">Start Date</option>
		</select>
		<%= submit_tag("Download Selected", class: "download-button") %>
	<% end %>
	</div>
	<a class="destroy-selected" href="/destroy_selected">Delete selected</a>
	<table id="table_id">
	  <thead>
		  <tr>
			  <th>ID</th>
		    <th>First Name</th>
		    <th>Last Name</th> 
		    <th>University</th>
		    <th>Graduation Year</th>
		    <th>Company</th>
		    <th>Current Location</th>
		    <th>Current Region</th>
		    <th>Gender</th>
		    <th>Start Date with Current Firm</th>
		    <th>Preferred PE Start Date</th>
		    <th>Industry Preference (First)</th>
		    <th>Industry Preference (Second)</th>
		    <th>Industry Preference (Third)</th>
		    <th>Submitted At</th>
		    <th>Resume</th>
		    <th>Edit</th>
		    <th>Delete</th>
		  </tr>
	  </thead>
	  <tbody>
			<%= render @profiles %>
		</tbody>
	</table>
	
</div>